<?xml version="1.0" encoding="UTF-8"?>

 <beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
  
        
     <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">  
        <property name="driverClassName"  value="oracle.jdbc.driver.OracleDriver"></property>  
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"></property>  
        <property name="username" value="student"></property>  
        <property name="password" value="student"></property>  
    </bean>  
      
      
    <bean id="mysessionFactory"  class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">  
        <property name="dataSource" ref="dataSource"></property>  
          
        <property name="annotatedClasses">
            <list>
                    <value>beans.Student</value>
                    <value>beans.Course</value>
                    <value>beans.Results</value>
            </list>
        </property>      
          
        <property name="hibernateProperties">  
            <props>  
                <prop key="hibernate.dialect">org.hibernate.dialect.Oracle9Dialect</prop>  
                <prop key="hibernate.hbm2ddl.auto">update</prop>  
                <prop key="hibernate.show_sql">true</prop>  
                 <prop key="hibernate.connection.autocommit">true</prop>
                  
            </props>  
        </property>  
         
    </bean>  
      
    <bean id="template" class="org.springframework.orm.hibernate4.HibernateTemplate">  
        <property name="sessionFactory" ref="mysessionFactory"></property>  
        <property name="checkWriteOperations" value="false"></property>
    </bean>  
      
    <bean id="studentDao" class="daoimplement.studentDao">  
        <property name="template" ref="template"></property>  
        <!-- name="template" :   HibernateTemplate template;  in studentDao.java  -->  
    </bean>  
    
     <bean id="courseDao" class="daoimplement.courseDao">  
        <property name="template" ref="template"></property>  
        <!--<property name="template"  : HibernateTemplate template;  in courseDao.java  -->  
    </bean>  
      
   <bean id="resultDao" class="daoimplement.resultDao">  
        <property name="template" ref="template"></property>  
    </bean>    
      
      
</beans>
